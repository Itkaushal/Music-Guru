<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MusicGuru" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- Customize primary colors -->
        <item name="colorPrimary">#C3C0C0</item> <!-- App Bar / Toolbar -->
        <item name="colorPrimaryContainer">#FFD700</item> <!-- Background for containers -->
        <item name="colorOnPrimary">@color/white</item> <!-- Toolbar Text & Icons -->

        <!-- Status Bar (App Bar at the top) -->
        <item name="android:statusBarColor">@color/red</item>

        <!-- Action Bar Background -->
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
    </style>

    <!-- Custom Action Bar Style -->
    <style name="MyActionBarStyle" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@color/red</item> <!-- Change Action Bar color -->
        <item name="titleTextColor">#FFFF8952</item> <!-- Action Bar title color -->
    </style>
</resources>