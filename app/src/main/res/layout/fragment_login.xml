<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shapecardgradient"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".ui.fragment.auth.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/register_layout_topbackround"
        android:layout_height="70dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:letterSpacing="0.1"
            android:layout_marginStart="10dp"
            android:text="Login Process"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="bottom"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="10dp"
            android:weightSum="2"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="end"
                android:layout_marginEnd="5dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Entertain With"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Music Guru"
                android:textSize="22sp"
                android:textColor="@color/red"
                android:textStyle="bold"/>
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:textSize="24sp"
            android:layout_height="wrap_content"
            android:text="Let's Get Started!"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>



        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="10dp"
            app:cardCornerRadius="30dp"
            android:layout_margin="1dp"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeWidth="1dp"
                    android:layout_marginTop="10dp"
                    app:boxStrokeColor="@color/red"
                    app:boxStrokeErrorColor="@color/black"
                    app:errorTextColor="@color/black"
                    app:hintTextColor="@color/black"
                    app:cursorColor="@color/black"
                    app:cursorErrorColor="@color/red"
                    app:boxStrokeWidthFocused="2dp"
                    app:expandedHintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:textColorHint="@color/gray"
                    app:hintEnabled="true"
                    app:errorEnabled="true"
                    android:elevation="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_userName_Login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:drawableTint="@color/red"
                        android:drawableEnd="@drawable/account_icon"
                        android:inputType="textPersonName"
                        android:maxLength="12"
                        android:textColorHint="@color/black"
                        android:password="false"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeWidth="1dp"
                    android:layout_marginTop="10dp"
                    app:boxStrokeColor="@color/red"
                    app:boxStrokeErrorColor="@color/black"
                    app:errorTextColor="@color/black"
                    app:hintTextColor="@color/black"
                    app:cursorColor="@color/black"
                    app:cursorErrorColor="@color/red"
                    app:expandedHintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:textColorHint="@color/gray"
                    app:hintEnabled="true"
                    android:showDividers="beginning"
                    app:boxStrokeWidthFocused="2dp"
                    app:errorEnabled="true"
                    android:elevation="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_userPassword_Login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:drawableTint="@color/red"
                        android:drawableEnd="@drawable/lock_input_icon"
                        app:passwordToggleEnabled="true"
                        android:inputType="textWebPassword"
                        android:maxLength="10"
                        android:textColorHint="@color/black"
                        android:password="false"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:text="RegisterðŸ‘ˆ"
                    android:letterSpacing="0.1"
                    android:textSize="12sp"
                    android:id="@+id/tv_goRegister"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"/>


                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:layout_margin="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:soundEffectsEnabled="true"
                    android:shadowColor="@color/gray"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:id="@+id/btn_Login"
                    android:textStyle="normal"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:text="Login"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:backgroundTint="@color/red"
                    app:rippleColor="@color/white"
                    app:elevation="10dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp"
                    android:textAllCaps="false"/>

                <!-- spacer view -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center"
                        android:background="@color/black"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:text="Or"
                        android:textColor="@color/black"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center"
                        android:background="@color/black"
                        android:layout_weight="1"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:text="Continue with Google"
                    android:textColor="@color/black"
                    app:icon="@drawable/google_icon_button"
                    android:layout_height="60dp"
                    app:strokeColor="@color/black"
                    app:iconTint="@color/black"
                    app:strokeWidth="1dp"
                    app:iconTintMode="src_in"
                    app:cornerRadius="25dp"
                    android:id="@+id/googleloginButton"
                    app:iconSize="20dp"
                    android:backgroundTint="@color/white"
                    app:iconGravity="textStart"
                    app:rippleColor="@color/black"
                    app:iconPadding="10dp"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>


</LinearLayout>